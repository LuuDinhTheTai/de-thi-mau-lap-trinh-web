@inject QlhangHoaContext _context

@{
    var danhSachLoaiHang = _context.LoaiHangs.ToList();
}

<!-- Begin Header -->
<div class="header">
    <div class="header_top">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt=""/></a>
        </div>
        <div class="cart">
            <p>Welcome to our Online Store! <span>Cart:</span></p>
            <div id="dd" class="wrapper-dropdown-2"> 0 item(s) - $0.00
                <ul class="dropdown">
                    <li>you have no items in your Shopping cart</li>
                </ul>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="header_bottom">
        <div class="menu">
            <ul>
                <li class="active"><a asp-controller="Home" asp-action="Index">Lưu Đình Thế Tài</a></li>
                @foreach (var loai in danhSachLoaiHang)
                {
                    <li><a href="#" class="category-link" data-maloai="@loai.MaLoai">@loai.TenLoai</a></li>
                }
                <div class="clear"></div>
            </ul>
        </div>
        <div class="search_box">
            <form>
                <input type="text" value="Search" onfocus="this.value = '';"
                       onblur="if (this.value == '') {this.value = 'Search';}">
                <input type="button" value="">
            </form>
        </div>
        <div class="clear"></div>
    </div>
</div>
<!-- End Header -->